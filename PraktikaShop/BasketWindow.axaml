<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PraktikaShop.BasketWindow"
		x:CompileBindings="False"
        Title="Корзина">
	<Grid
		ColumnDefinitions="*,*,*,*"
		RowDefinitions="*,*,*,*">
		<TextBlock Grid.Column="1"
				   Grid.Row="0"
				   Grid.ColumnSpan="2"
				   Text="Ваша корзина"
				   HorizontalAlignment="Center"
				   FontSize="18"/>
		<ListBox Grid.Column="1"
				 Grid.ColumnSpan="2"
				 Grid.Row="1"
				 Grid.RowSpan="2"
				 Name="BasketListBox">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel>
						<Image  Height="80" Width="80" Source="{Binding ParseImage}" Margin="5"></Image>\
						<TextBlock Text="{Binding ProductName, StringFormat='Название товара: {0}'}" Margin="5"/>
						<TextBlock Text="{Binding Cost, StringFormat='Стоимость: {0} руб'}" Margin="5"/>
						<TextBlock Text="{Binding Count, StringFormat='Количество товара: {0}'}" Margin="5"/>
						<TextBlock Text="{Binding Discount, StringFormat='Скидка: {0} %'}" Margin="5"/>
						<Button Grid.Column="3"
				Grid.Row="1"
				Grid.RowSpan="2"
				Content="Убрать из корзины"
				Margin="5"
				Tag="{Binding ProductId}"/>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<Button Grid.Column="2" 
				Grid.Row="3"
				Grid.ColumnSpan="1"
				Content="Выйти"
				HorizontalAlignment="Center"/>
		
		<Button Grid.Column="1"
				Grid.Row="3"
				Grid.ColumnSpan="1"
				HorizontalAlignment="Center"
				Content="Создать заказ"
				/>
		
		
		

	</Grid>
</Window>
