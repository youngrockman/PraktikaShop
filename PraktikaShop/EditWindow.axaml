<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
        x:Class="PraktikaShop.EditWindow"
        Title="Редактирование товара">

	<StackPanel Margin="20" Spacing="10">
		<TextBlock Text="Редактирование товара" FontSize="16" FontWeight="Bold"/>

		<TextBlock Text="Название товара:"/>
		<TextBox x:Name="NameBox" Margin="0,5,0,10"/>

		<TextBlock Text="Количество товара:"/>
		<TextBox x:Name="CountBox" Margin="0,5,0,10"/>

		<TextBlock Text="Стоимость:"/>
		<TextBox x:Name="CostBox" Margin="0,5,0,10"/>

		<TextBlock Text="Изображение:"/>
		<TextBox x:Name="ImageBox" Margin="0,5,0,10"/>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
			<Button Content="Сохранить" Click="SaveButton_Click" Width="100"/>
			<Button Content="Назад" Click="BackButton_Click" Width="100"/>
		</StackPanel>
	</StackPanel>
</Window>